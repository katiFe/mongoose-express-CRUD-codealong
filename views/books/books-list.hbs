
<h1>Book List:</h1>

{{#each booksArr}}      {{!-- {{we are itterating through the array that we receive and we are displaying the content}} --}}
<div class="book-summary">
    <p>
        Title: {{this.title}}
    </p>

    <p>
        Author: {{this.author}}
    </p>

    <a href="/books/{{this._id}}">More details</a>

    <form action="/books/{{this._id}}/delete" method="POST" > 
        <button>Delete</button>
    </form>
</div>

{{/each}}